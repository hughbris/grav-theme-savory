{% extends 'partials/base.html.twig' %}

{% block content %}
<!-- Add your site or app content here -->

<div class="hero-full-wrapper">
	<div class="grid">
		<div class="gutter-sizer"></div>
		<div class="grid-sizer"></div>
		{% for item in page.header.grid_items %}
			{% set hero = page.media[item.hero] %}
			{% if hero %} {# only show the panel if the image can be loaded #}
			<div class="grid-item">
				<img class="img-responsive" alt="{{ hero.meta.alt|default('') }}" src="{{ hero.url }}">
				{% set target_page = page.find(item.target) %}
				{% if target_page is not empty %}
					<a href="{{ target_page.url }}" class="project-description">
				{% endif %}
				<div class="project-text-holder">
					<div class="project-text-inner">
						<h3>{{ item.heading|e }}</h3>
						{% if item.teaser %}
							{{ item.teaser|trim|markdown()|raw }}
						{% endif %}
					</div>
				</div>
				{% if target_page is not empty %}
					</a>
				{% endif %}
			</div>
			{% endif %}
		{% endfor %}
	</div>
</div>

{% set inline_main %}
document.addEventListener("DOMContentLoaded", function (event) {
	masonryBuild();
});
{% endset %}
{% do assets.addInlineJs(inline_main, {'group': 'main'}) %}

{% endblock %}